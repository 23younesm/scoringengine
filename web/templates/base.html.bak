<!doctype html>
<html lang="en" dir="ltr" class="uk-height-1-1">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="{{ url_for('static', filename='images/favicon.ico') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.1/css/uikit.almost-flat.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.1/js/uikit.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.min.js"></script>

        {% block head %}
        <title>Scoring Engine - {% block title %}{% endblock %}</title>
        {% endblock %}

    </head>

    <body class="uk-height-1-1">
        <div id="content">
            <nav class="uk-navbar">
                <a class="uk-navbar-brand uk-hidden-small" href="/">Scoring Engine</a>
                <ul class="uk-navbar-nav uk-hidden-small">
                    <li class="uk-parent" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
                        <a>Test1 <i class="uk-icon-caret-down"></i></a>
                        <div class="uk-dropdown uk-dropdown-navbar uk-dropdown-bottom" style="top: 40px; left: 0px;">
                            <ul class="uk-nav uk-nav-navbar">
                                <li>
                                    <a href="/">Test</a>
                                </li>
                                <li>
                                    <a href="/">Test</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li class="uk-parent" data-uk-dropdown="" aria-haspopup="true" aria-expanded="false">
                        <a>Test2 <i class="uk-icon-caret-down"></i></a>
                        <div class="uk-dropdown uk-dropdown-navbar uk-dropdown-bottom" style="top: 40px; left: 0px;">
                            <ul class="uk-nav uk-nav-navbar">
                                <li>
                                    <a href="/">Test1</a>
                                </li>
                                <li>
                                    <a href="/">Test2</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
                <div class="uk-navbar-flip">
                    <ul class="uk-navbar-nav uk-hidden-small">
                        <li>
                            <a href="/settings">Settings</a>
                        </li>
                        <li>
                            <a href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
            {% for category, message in get_flashed_messages(with_categories=true) %}
            <div class="uk-alert uk-alert-{{category}} uk-margin-remove" data-uk-alert><a href="" class="uk-alert-close uk-close"></a>
                <p>{{ message }}</p>
            </div>
            {% endfor %}
            <div>
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </body>
</html>
